# MetaBundle Scraper Environment Configuration
# Copy this file to .env and modify as needed

# First time setup flag (set to false after initial setup)
FIRST_TIME_RUN=true

# Port configuration
BACKEND_PORT=8000
FRONTEND_PORT=3000

# Docker Compose project name
COMPOSE_PROJECT_NAME=metabundle-scraper

# Container configuration
CONTAINER_PREFIX=scraper-instance
CONTAINER_NETWORK=metabundle-scraper_scraper-network

# Resource limits
MAX_CONCURRENT_SCRAPERS=10
CONTAINER_MEMORY_LIMIT=256m
CONTAINER_CPU_LIMIT=0.5

# Logging configuration
LOG_LEVEL=info
